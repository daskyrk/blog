{
  "name": "blog-server",
  "version": "0.0.1",
  "description": "blog server powered by vue,koa and mongodb",
  "main": "lib/index.js",
  "private": true,
  "scripts": {
    "encode": "node lib/encode-config.js",
    "decode": "node lib/encode-config.js de=1",
    "start": "pm2 start lib/index.js --name 'server'",
    "dev": "nodemon --exec \"NODE_ENV=development node --harmony lib/index.js\"",
