{
  "name": "blog-server",
  "version": "0.1.0",
  "description": "blog server powered by vue,koa and mongodb",
  "license": "MIT",
  "main": "lib/index.js",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "encode": "node src/config/encode-config.js",
    "decode": "node src/config/encode-config.js de=1",
    "old-start": "pm2 start lib/index.js --name 'server'",
    "dev": "nodemon --exec \"NODE_ENV=development node --harmony lib/index.js\""
  },
  "keywords": [
    "blog",
    "vue",
    "koa",
    "mongodb"
  ],
  "author": "LiJun",
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express-rate-limit": "^3.3.2",
    "geoip-lite": "^1.3.5",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "log4js": "^3.0.6",
    "mongoose": "^5.4.0",
    "mongoose-paginate": "^5.0.3",
    "mongoose-plugin-autoinc": "^1.1.9",
    "nodemailer": "^4.7.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "reflect-metadata": "^0.1.12",
    "require-context": "^1.1.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "nodemon": "^1.18.9",
    "pm2": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
